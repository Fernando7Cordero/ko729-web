---
import { assets } from "../../config/assets";

interface Props {
  title: string;
}

const { title } = Astro.props;
const logoSrc = assets.logos.letras;
const logoAlt = "logo";
---

<div class="pageHeader">
  <div class="pageHeader_inner">
    <div class="pageHeader_logo">
      <img src={logoSrc} alt={logoAlt} />
    </div>
    <div class="pageHeader_title">{title}</div>
  </div>
</div>

<style is:global>
  .pageHeader {
    display: flex;
    align-items: center;
    width: 100vw;
    height: 40vh;
    overflow: hidden;
    box-sizing: border-box;
    padding-top: var(--header-height);
    background: var(--page-header-bg, #d9d3c7);
    color: var(--page-header-color, #2f332b);
  }

  .pageHeader_inner {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0.8rem;
    padding: 2vh 0 3vh;
  }

  .pageHeader_logo {
    display: flex;
    width: 100%;
    justify-content: center;
    align-items: center;
  }

  .pageHeader_logo img {
    max-height: clamp(120px, 18vh, 240px);
    max-width: min(82vw, 520px);
    width: auto;
    height: auto;
    filter: var(--page-header-shadow, none);
  }

  .pageHeader_title {
    display: flex;
    width: 100%;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-family: var(--JosefinSans);
    font-size: clamp(0.85rem, 1.4vw, 1.15rem);
    font-weight: 100;
  }

  @media only screen and (max-width: 480px) {
    .pageHeader {
      padding-top: var(--header-height);
      height: 34vh;
    }

    .pageHeader_inner {
      padding: 1.5vh 0 2.5vh;
    }

    .pageHeader_logo img {
      max-height: clamp(100px, 18vh, 170px);
      max-width: 86vw;
    }

    .pageHeader_title {
      font-size: clamp(0.8rem, 3.2vw, 1rem);
      letter-spacing: 0.12rem;
    }
  }
</style>
