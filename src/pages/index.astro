---
import "../styles/pages/index.css";
import "../styles/shared/buttons.css";
import "../styles/shared/sections.css";
import { assets } from "../config/assets";
import { homeContent } from "../data/content";
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionBlock from "../components/ui/SectionBlock.astro";

const title = "KO729 | Inicio";
const description = "Arquitectura, ingeniería y construcción en CDMX.";
const keywords = "constructora, arquitectura, ingeniería, desarrollos, construcción, inversión";
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  pageCss={[]}
>
  <section class="hero" id="hero">
    <div class="hero_media">
      <img src={assets.index.bannerHome} class="banner_element" alt="" id="banner" />
    </div>
    <div class="hero_overlay"></div>
    <div class="hero_content">
      <img src={assets.logos.letrasAlt} alt="KO729" class="hero_logo" />
      <p class="hero_subtitle">{homeContent.hero.title}</p>
    </div>
  </section>

  <div class="desarrollosConstruccion_Container" id="contentStart">
    {homeContent.sections.map((section) => (
      <div class="desarrollosConstruccion">
        <SectionBlock
          title={section.title}
          description={section.description}
          href={section.href}
          buttonText={section.buttonText}
          imageClass={section.imageClass}
        />
      </div>
    ))}
  </div>

  <div class="collageContainer"></div>
  <script src="/scripts/funciones.js" defer></script>
</BaseLayout>
