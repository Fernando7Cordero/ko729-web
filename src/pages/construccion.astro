---
import "../styles/pages/construccion.css";
import "../styles/shared/buttons.css";
import "../styles/shared/sections.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import ContentSection from "../components/ui/ContentSection.astro";
import SectionBlock from "../components/ui/SectionBlock.astro";
import PageHeader from "../components/ui/PageHeader.astro";
import { construccionContent, metaContent } from "../data/content";

const title = "Construcci√≥n a la medida | KO729";
const description = metaContent.pages.construccion.description;
const keywords = metaContent.pages.construccion.keywords;
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  pageCss={[]}
>
  <PageHeader title={construccionContent.title} />
  <ContentSection>
    {construccionContent.blocks.map((block, index) => (
      <div class={`elementContainer${index === 2 ? " element3" : ""}`}>
        <SectionBlock
          title={block.title}
          description={block.description}
          imageClass={block.imageClass}
        />
      </div>
    ))}
  </ContentSection>
</BaseLayout>
