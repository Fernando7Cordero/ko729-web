---
import "../styles/pages/inversion.css";
import "../styles/shared/buttons.css";
import "../styles/shared/sections.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionBlock from "../components/ui/SectionBlock.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import { inversionContent, metaContent } from "../data/content";

const title = "Invierte con Nosotros | KO729";
const description = metaContent.pages.inversion.description;
const keywords = metaContent.pages.inversion.keywords;
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  pageCss={[]}
>
  <SectionTitle title={inversionContent.title} />

  <div class="inversionContainer">
    {inversionContent.blocks.map((block) => (
      <div class="elementContainer">
        <SectionBlock
          title={block.title}
          description={block.description}
          imageClass={block.imageClass}
        />
      </div>
    ))}
  </div>
</BaseLayout>
